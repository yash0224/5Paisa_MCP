# ✅ Use Node base with Debian (not Alpine)
FROM node:18.19.0-bullseye

# ✅ Install Python 3 and pip
RUN apt-get update && \
    apt-get install -y python3 python3-pip && \
    pip3 install --upgrade pip

# Create app directory
WORKDIR /app

# Copy only deps first for caching
COPY package*.json ./

# Install dependencies
RUN npm install -g ts-node mcp-framework
RUN npm install

# ✅ Install Python dependencies
RUN pip3 install py5paisa pyotp

# Copy rest of app
COPY . .

# Build TypeScript
RUN npm run build

# Start app
CMD ["npm", "start"]
