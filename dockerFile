# Start from Node base image
FROM node:18.19.0-bullseye

# Install Python and pip
RUN apt-get update && \
    apt-get install -y python3 python3-pip && \
    pip3 install --upgrade pip

# Set working directory
WORKDIR /app

# Copy only dependency files first
COPY package*.json ./

# Install global and local npm dependencies
RUN npm install -g ts-node mcp-framework
RUN npm install

# Install Python packages
RUN pip3 install py5paisa pyotp

# Copy source files
COPY . .

# Build project
RUN npm run build

# Default command
CMD ["npm", "start"]
